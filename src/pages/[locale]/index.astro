---
import Layout from '../../layouts/Layout.astro';
import { t } from '../../utils/i18n';

const { locale } = Astro.params;

export function getStaticPaths() {
  return [
    { params: { locale: 'es' } },
    { params: { locale: 'en' } },
    { params: { locale: 'gl' } }
  ];
}
---

<Layout title={`${t("common.nav.home", locale)} - Astro i18n`} locale={locale}>
  <div class="max-w-4xl mx-auto text-center">
    <h1 class="text-5xl font-bold text-gray-800 mb-4">
      {t("home.welcome", locale)}
    </h1>
    <p class="text-xl text-gray-600 mb-8">
      {t("home.description", locale)}
    </p>
    <div class="bg-white rounded-lg shadow-lg p-8 text-left">
      <h2 class="text-2xl font-semibold text-gray-800 mb-4">
        Features
      </h2>
      <ul class="space-y-3">
        <li class="flex items-start">
          <span class="text-blue-600 mr-2">✓</span>
          <span class="text-gray-700">Astro v5 - Fast static site generation</span>
        </li>
        <li class="flex items-start">
          <span class="text-blue-600 mr-2">✓</span>
          <span class="text-gray-700">Tailwind CSS v4 - Utility-first CSS framework</span>
        </li>
        <li class="flex items-start">
          <span class="text-blue-600 mr-2">✓</span>
          <span class="text-gray-700">i18next - Internationalization (ES, EN, GL)</span>
        </li>
        <li class="flex items-start">
          <span class="text-blue-600 mr-2">✓</span>
          <span class="text-gray-700">TypeScript - Type safety</span>
        </li>
      </ul>
    </div>
  </div>
</Layout>
